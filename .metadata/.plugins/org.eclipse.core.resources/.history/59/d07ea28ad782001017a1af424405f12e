package curso_programacao;

public class teste_processamento {

	public static void main(String[] args) {
		
		int x, y;
		x = 5;
		y = 2 * x;
		
		System.out.println(x);
		System.out.println(y);
		
		double z = 2 * y;
		
		System.out.println(z);
		
		//Calculo área de um trapézio utilizando double 
		double b, B, h, area;
		b = 6.0;
		B = 8.0;
		h = 5.0;
		
		area = (b + B) / 2.0 * h;
		System.out.printf("A área é: %.2f", area);
		System.out.println("");
		
		//Calculo área de um trapézio utilizando float 
				float c, C, i, irea;
				c = 6f;
				C = 8f;
				i = 5f;
				
				irea = (c + C) / 2f * i;
				System.out.printf("A área é: %.2f", irea);
		
		}

}
